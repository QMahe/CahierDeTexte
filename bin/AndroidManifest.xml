<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cahierdetexte"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cahierdetexte.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cahierdetexte.AjouterActivity"
            android:label="@string/title_activity_ajouter" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cahierdetexte.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cahierdetexte.EditTravailActivity"
            android:label="@string/title_activity_editer" >
        </activity>
        <activity
            android:name="com.example.cahierdetexte.ChercherActivity"
            android:label="@string/title_activity_chercher" >
        </activity>
        <activity
            android:name="com.example.cahierdetexte.ListeTravauxActivity"
            android:label="@string/title_activity_liste_travaux"
            android:parentActivityName="ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ListActivity" />
        </activity>
    </application>

</manifest>